# TODO(Vlad):
# - add shortcut for spawning  / bringing focus to main apps

# enter fullscreen mode for the focused container
# TODO(Vlad): ... and follow focus
cmd + ctrl + alt - f : chunkc tiling::window --toggle fullscreen

# change layout of desktop
cmd + ctrl + alt - e : chunkc tiling::desktop --layout bsp
cmd + ctrl + alt - w : chunkc tiling::desktop --layout monocle

# kill focused window
hyper - c : chunkc tiling::window --close

# change focus
cmd + ctrl + alt - h : chunkc tiling::window --focus west
cmd + ctrl + alt - j : chunkc tiling::window --focus south
cmd + ctrl + alt - k : chunkc tiling::window --focus north
cmd + ctrl + alt - l : chunkc tiling::window --focus east

cmd + ctrl + alt - p : chunkc tiling::window --focus prev
cmd + ctrl + alt - n : chunkc tiling::window --focus next

# move focused window
hyper - h : chunkc tiling::window --warp west
hyper - j : chunkc tiling::window --warp south
hyper - k : chunkc tiling::window --warp north
hyper - l : chunkc tiling::window --warp east

cmd + ctrl + alt - r : chunkc tiling::desktop --rotate 90

# load partial config that defines desktop layout
# it gets automatically switched depending on the number of monitors
.load ".skhdrc_3"

# reload chunkwm
cmd + shift + ctrl - r : brew services restart chunkwm
cmd + shift + ctrl - 1 : sed -i "" 's/.load \".skhdrc_3\"/.load \".skhdrc_1\"/g' ~/dotfiles/vlad_skhdrc && brew services restart chunkwm
cmd + shift + ctrl - 3 : sed -i "" 's/.load \".skhdrc_1\"/.load \".skhdrc_3\"/g' ~/dotfiles/vlad_skhdrc && brew services restart chunkwm
cmd + shift + ctrl - 4 : osascript -e 'display notification "its me!"'

# app launch hotkeys
cmd + ctrl + alt - t : /Applications/iTerm.app/Contents/MacOS/iTerm2
cmd + ctrl + alt - q : open ~
