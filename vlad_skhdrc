# TODO(Vlad):
# - add shortcut for spawning  / bringing focus to main apps


# enter fullscreen mode for the focused container
# TODO(Vlad): ... and follow focus
alt - f : chunkc tiling::window --toggle fullscreen

# change focus between tiling / floating windows
shift + alt - space : chunkc tiling::window --toggle float

# change layout of desktop
alt - e : chunkc tiling::desktop --layout bsp
alt - w : chunkc tiling::desktop --layout monocle

# kill focused window
shift + alt - c : chunkc tiling::window --close

# change focus
alt - h : chunkc tiling::window --focus west
alt - j : chunkc tiling::window --focus south
alt - k : chunkc tiling::window --focus north
alt - l : chunkc tiling::window --focus east

alt - p : chunkc tiling::window --focus prev
alt - n : chunkc tiling::window --focus next

# move focused window
shift + alt - h : chunkc tiling::window --warp west
shift + alt - j : chunkc tiling::window --warp south
shift + alt - k : chunkc tiling::window --warp north
shift + alt - l : chunkc tiling::window --warp east

alt - r : chunkc tiling::desktop --rotate 90

# focus desktop
alt - 1 : chunkc tiling::desktop --focus 4
alt - 2 : chunkc tiling::desktop --focus 5
alt - 3 : chunkc tiling::desktop --focus 6
alt - 4 : chunkc tiling::desktop --focus 1
alt - 5 : chunkc tiling::desktop --focus 2
alt - 6 : chunkc tiling::desktop --focus 3
alt - 7 : chunkc tiling::desktop --focus 7
alt - 8 : chunkc tiling::desktop --focus 8
alt - 9 : chunkc tiling::desktop --focus 9

# move focused container to workspace
shift + alt - 1 : chunkc tiling::window --send-to-desktop 4
shift + alt - 2 : chunkc tiling::window --send-to-desktop 5
shift + alt - 3 : chunkc tiling::window --send-to-desktop 6
shift + alt - 4 : chunkc tiling::window --send-to-desktop 1
shift + alt - 5 : chunkc tiling::window --send-to-desktop 2
shift + alt - 6 : chunkc tiling::window --send-to-desktop 3
shift + alt - 7 : chunkc tiling::window --send-to-desktop 7
shift + alt - 8 : chunkc tiling::window --send-to-desktop 8
shift + alt - 9 : chunkc tiling::window --send-to-desktop 9

# reload chunkwm
meh - r : brew services restart chunkwm
meh - e : brew services restart skhd

# app launch hotkeys
alt - t : /Applications/iTerm.app/Contents/MacOS/iTerm2
alt - q : open ~
