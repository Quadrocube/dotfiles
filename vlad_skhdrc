# TODO(Vlad):
# - add shortcut for spawning  / bringing focus to main apps

# enter fullscreen mode for the focused container
# TODO(Vlad): ... and follow focus
rcmd - f : chunkc tiling::window --toggle fullscreen

# change layout of desktop
rcmd - e : chunkc tiling::desktop --layout bsp
rcmd - d : chunkc tiling::desktop --layout monocle

# kill focused window
rcmd - w : chunkc tiling::window --close

# change focus
rcmd - h : chunkc tiling::window --focus west
rcmd - j : chunkc tiling::window --focus south
rcmd - k : chunkc tiling::window --focus north
rcmd - l : chunkc tiling::window --focus east

rcmd - p : chunkc tiling::window --focus prev
rcmd - n : chunkc tiling::window --focus next

# move focused window
rcmd + shift - h : chunkc tiling::window --warp west
rcmd + shift - j : chunkc tiling::window --warp south
rcmd + shift - k : chunkc tiling::window --warp north
rcmd + shift - l : chunkc tiling::window --warp east

rcmd - r : chunkc tiling::desktop --rotate 90

# load partial config that defines desktop layout
# it gets automatically switched depending on the number of monitors
.load ".skhdrc_1"

# reload chunkwm
cmd + shift + ctrl - r : brew services restart chunkwm
cmd + shift + ctrl - 1 : sed -i "" 's/.load \".skhdrc_3\"/.load \".skhdrc_1\"/g' ~/dotfiles/vlad_skhdrc && osascript -e 'display notification "1 screen setup!"' && brew services restart chunkwm
cmd + shift + ctrl - 3 : sed -i "" 's/.load \".skhdrc_1\"/.load \".skhdrc_3\"/g' ~/dotfiles/vlad_skhdrc && osascript -e 'display notification "3 screen setup!"' && brew services restart chunkwm
cmd + shift + ctrl - 4 : osascript -e 'display notification "its me!"'

# app launch hotkeys
rcmd - t : /Applications/iTerm.app/Contents/MacOS/iTerm2
rcmd - q : open ~
